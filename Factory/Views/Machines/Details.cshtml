@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2 class="text-center">~Machine Details~</h2>
<hr />
<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">Name</th>
    </tr>
  </thead>
  <tbody>
    <td>@Html.DisplayFor(model => model.MachineName)</td>
  </tbody>
</table>

<h3>@Html.DisplayFor(model => model.MachineName) can be worked on by these engineers:</h3>
<ul>
@foreach(var join in Model.JoinEntities)
{
  <li>@join.Engineer.EngineerName</li>
}
</ul>

<p class="text-center navMenu">@Html.ActionLink("Edit Machine", "Edit", new { id = Model.MachineId })</p>
<p class="text-center navMenu">@Html.ActionLink("Delete Machine", "Delete", new { id = Model.MachineId })</p>
<p class="text-center navMenu">@Html.ActionLink("Add New Machine", "Create", "Machines")</p>