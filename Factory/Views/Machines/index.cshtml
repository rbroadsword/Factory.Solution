@using Factory.Models;
@{
  Layout = "_Layout";
}

<div class="container">
  <h2 class="text-center">~Machines~</h2>

  @if (@Model.Count == 0)
  {
    <h3>No machines have been added yet!</h3>
} else {
  <table class="table">
    <thead class="thead-light">
      <th scope="col">#</th>
      <th scope="col">Name</th>
    </thead>
    <tbody>
      @foreach(Machine machine in Model)
      {
        <tr>  
          <th scope="row">@Html.DisplayFor(modelMachine => machine.MachineId)</th>
          <td>@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId })</td>
        </tr>
      }
    </tbody>
  </table>
} 

<p class="text-center navMenu" >@Html.ActionLink("Add new machine", "Create")</p>
</div>