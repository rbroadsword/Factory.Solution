@{
  Layout = "_Layout"; 
}

@model Factory.Models.Engineer

<h1 class="text-center"> ~Add a new Engineer~ </h1>

<div class="text-center"> 
  @using (Html.BeginForm())
  {
    <div class="fieldset newClient">
      @Html.LabelFor(model => model.EngineerName)
      @Html.TextBoxFor(model => model.EngineerName)
    </div>
    <div class="fieldset newClient">
      @Html.LabelFor(model => model.Specialty)
      @Html.TextBoxFor(model => model.Specialty)
    </div>
    <div class="newClient">
      <input type="submit" value="Add new Engineer"/>
    </div>
  }
</div>

<p class="text-center navMenu">@Html.ActionLink("Show all engineers", "Index")</p> 