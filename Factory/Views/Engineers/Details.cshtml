@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2 class="text-center">~Engineer Details~</h2>
<hr />
<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Specialty</th>
    </tr>
  </thead>
  <tbody>
    <td>@Html.DisplayFor(model => model.EngineerName)</td>
    <td>@Html.DisplayFor(model => model.Specialty)</td>
  </tbody>
</table>

<h3>@Html.DisplayFor(model => model.EngineerName) can work on these machines:</h3>
<ul>
@foreach(var join in Model.JoinEntities)
{
  <li>@join.Machine.MachineName</li>
}
</ul>

<p class="text-center navMenu">@Html.ActionLink("Assign a Machine", "AddMachine", new { id = Model.EngineerId })</p>
<p class="text-center navMenu">@Html.ActionLink("Edit Engineer", "Edit", new { id = Model.EngineerId })</p>
<p class="text-center navMenu">@Html.ActionLink("Delete Engineer", "Delete", new { id = Model.EngineerId })</p>
<p class="text-center navMenu">@Html.ActionLink("Add New Engineer", "Create", "Engineers")</p>